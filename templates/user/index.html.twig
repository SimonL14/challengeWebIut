{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="user_body">
        <h1 class="titre">Gestion des utilisateurs</h1>
        <input class="searchBar" type="text" placeholder="Nom utilisateur"></input>

        <table class="table">
            <thead>
                <tr>
                    <th class="user_th">Utilisateur</th>
                    <th class="delete_th">Suppression</th>
                    {% if is_granted('ROLE_ADMIN') == true %}
                    <th>Admin</th>
                    {% endif %}
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr class="user_row">
                    <td class="user_name">{{ user.Firstname }} {{ user.Lastname }}</td>
                    <td>
                        {{ include('user/_delete_form.html.twig') }}
                    </td>
                    {% if is_granted('ROLE_ADMIN') == true %}
                        <a href="#">Créer un event</a>
                        <a href="#">Gérer les utilisateurs</a>
                {% endif %}
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    

{% endblock %}